{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Debug C",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe",  // Caminho autom√°tico para o .exe
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",  // Usa a pasta do arquivo atual
            "environment": [],
            "externalConsole": true,   // Janela externa (opcional)
            "MIMode": "gdb",
            "miDebuggerPath": "C:/mingw64/bin/gdb.exe",  // Caminho completo do GDB
            "preLaunchTask": "Compilar C",  // Nome da tarefa no tasks.json (se existir)
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}